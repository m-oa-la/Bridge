@model IEnumerable<BridgeMVC.Models.Rule>

@{ 
    Layout = "~/Views/Shared/_LayoutNoLogin.cshtml";
}

<h4 style="margin-top:1px">Applicable Rules <span style="float:right; padding-right:4em"> @Html.ActionLink("Add New", "Create")</span></h4>


<table class="table">
    <colgroup>
        <col span="1" style="width: 90%;">
        <col span="1" style="width: 10%;">


    </colgroup>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.RuleName)
            </td>

            <td>

                @using (Html.BeginForm("Delete", "Rule", new { id = item.Id }, FormMethod.Post, null))
                {@Html.AntiForgeryToken()
                <input type="submit" value="Delete" />
            }
            </td>
        </tr>
    }

</table>
