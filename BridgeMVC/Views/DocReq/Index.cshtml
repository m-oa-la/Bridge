@model IEnumerable<BridgeMVC.Models.DocReq>
@{
    Layout = "~/Views/Shared/_LayoutNoLogin.cshtml";
}

@{
    string bridgeModule = (string)Session["BridgeModule"];
}


<h4 style="margin-top:1px"><span id="listTitle">Approval Conditions: (to be added in IORA 'SoW' chapter)</span> <span style="float:right; padding-right:4em"> @Html.ActionLink("Add New", "Create")</span></h4>

<table class="table">
    <colgroup>
        <col span="1" style="width: 90%;">
        <col span="1" style="width: 10%;">

    </colgroup>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DocReqItem)
            </td>
            <td>
                @using (Html.BeginForm("Delete", "DocReq", new { id = item.Id }, FormMethod.Post, null))
                {@Html.AntiForgeryToken()
                <input type="submit" value="Delete" />
            }
            </td>
        </tr>
    }
</table>


<script>
    var bm = "@bridgeModule";
    if (bm == "M2") {
        $("#listTitle").html("Required Documentation")
    }


</script>