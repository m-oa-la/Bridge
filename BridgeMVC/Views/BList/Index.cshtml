@model IEnumerable<BridgeMVC.Models.BList>

<h2>Bridging List</h2>
<p>
    @Html.ActionLink("Add New", "Create", new { target = "_blank" })
</p>

@using (Html.BeginForm())
{
    <p>
        Filter: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
}
<table class="table">
    <tr>

        <th hidden>
            @Html.DisplayNameFor(model => model.BridgeModule)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ListType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ListItem)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Note)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UpperLvl)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>

        <td hidden>
            @Html.DisplayFor(modelItem => item.BridgeModule)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ListType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ListItem)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Note)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UpperLvl)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) 
        </td>
    </tr>
    }

</table>
