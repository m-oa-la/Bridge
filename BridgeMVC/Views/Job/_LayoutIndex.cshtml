<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bridge</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/Common/JobIndexStyleSheet.css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
</head>

<body>
    <header class="header">
        <div class="navbar ">
            <div style="float:right">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </header>
    <div class="container body-content">
        @RenderBody()
        <br />
    </div>

    <footer>
        <hr />
        <table class="table table-mid-align-rows hoverRow" style="table-layout:fixed;">
            <tr class="jobList">
                <td style="width:35px;"><div class="classTY"></div></td>
                <td><p>Task is completed</p></td>
                <td style="width:35px;"><div class="classTTASK"></div></td>
                <td><p>Task is assigned to you (ongoing)</p></td>
                @*<td class="classT"></td>
                <td style="@styleTxt">IORA pending verification</td>*@
                <td style="width:35px;"><div class="classTPENDING">X</div></td>
                <td><p>Task is pending for X days</p></td>
                <td style="width:35px;"><div class="classT"></div></td>
                <td><p>Task is not assigned</p></td>
            </tr>
        </table>
    </footer>
    
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/Common/JobIndex.js")
    @RenderSection("scripts", required: false)

</body>
</html>