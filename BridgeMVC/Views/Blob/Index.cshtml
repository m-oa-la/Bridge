    Layout = null;
}

<div>
    @Html.ActionLink("Create blob container", "CreateBlobContainer", "Blob")
</div>

<div>
    @Html.ActionLink("Upload blob", "UploadBlob", "Blob")
</div>

<div>
    @Html.ActionLink("List blobs", "ListBlobs", "Blob")
</div>
<div>
    @Html.ActionLink("Download blob", "DownloadBlob", "Blob")
</div>
