@model IEnumerable<BridgeMVC.Models.BingBridge>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Tag)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BridgeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TemplatePath)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ArchivePath)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Tag)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BridgeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TemplatePath)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ArchivePath)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
